extends ../layout

block content
  div.content-container
    div
      a.button(href="/students/add") Add Student
    table
      thead
        tr
          th First
          th Last
          th Grade
          th
      tbody
          each student in students
            tr
              td=student.first_name
              td=student.last_name
              td=student.grade_level
              td
                a(href=`/students/profile/${student.id}`) View Student
